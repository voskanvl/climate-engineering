---
import specter from "@data/specter"
import { Image } from "astro:assets"
import Condey from "@images/condey.png"
---

<div class="specter">
    <div class="specter__left">
        <h2 class="specter__title">Широкий спектр<br /> применения кондиционеров</h2>
        <div class="specter__matrix">
            {
                specter &&
                    specter.map(({ name, href }: { name: string; href: string }) => (
                        <a href={href} class="specter__matrix-item">
                            {name}
                        </a>
                    ))
            }
        </div>
    </div>
    <div class="specter__right">
        <Image src={Condey} alt="condey" />
    </div>
</div>

<style is:global>
    .specter {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }
    .specter__left {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .specter__title {
        color: var(--clr-black);
        font-size: 45px;
        font-weight: 600;
        line-height: 105%; /* 47.25px */
    }
    .specter__matrix {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
    }
    .specter__matrix > * {
        border-radius: 100px;
        border: 1px solid var(--clr-blue);
        backdrop-filter: blur(15px);
        text-align: center;
        padding-block: 1em;
        color: var(--clr-blue);
        font-weight: 600;
        line-height: 105%; /* 16.8px */
    }
    .specter__matrix-item:nth-child(1) {
        grid-column: 1 / 4;
    }
    .specter__matrix-item:nth-child(4) {
        grid-column: 2 / -1;
    }
    .specter__matrix-item:nth-child(5) {
        grid-column: 1 / 4;
    }
    .specter__matrix-item:nth-child(7) {
        grid-column: 1 / 3;
    }
    .specter__matrix-item:nth-child(8) {
        grid-column: 3 / -1;
    }
    .specter__right > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }
</style>
