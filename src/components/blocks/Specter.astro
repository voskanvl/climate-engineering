---
import specter from "@data/specter"
// import { Image } from "astro:assets"
// import Condey from "@images/condey.png"
import { Picture } from "astro-imagetools/components"
---

<div class="specter">
    <div class="specter__left">
        <h2 class="specter__title title">Широкий спектр<br /> применения кондиционеров</h2>
        <div class="specter__matrix">
            {
                specter &&
                    specter.map(({ name, href }: { name: string; href: string }) => (
                        <a href={href} class="specter__matrix-item">
                            {name}
                        </a>
                    ))
            }
        </div>
    </div>
    <div class="specter__right">
        <Picture
            src="assets/images/condey.png"
            alt="condey"
            breakpoints={[320, 480, 768, 1024, 1440]}
        />
    </div>
</div>

<style is:global>
    .specter {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: calc(120 / 1920 * 100vw);
    }
    .specter__title.title {
        text-align: left;
    }
    .specter__left {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .specter__matrix {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
    }
    .specter__matrix > * {
        border-radius: 100px;
        border: 1px solid var(--clr-blue);
        backdrop-filter: blur(15px);
        text-align: center;
        padding-block: 1em;
        color: var(--clr-blue);
        font-weight: 500;
        line-height: 105%; /* 16.8px */
    }
    .specter__matrix-item:nth-child(1) {
        grid-column: 1 / 4;
    }
    .specter__matrix-item:nth-child(4) {
        grid-column: 2 / -1;
    }
    .specter__matrix-item:nth-child(5) {
        grid-column: 1 / 4;
    }
    .specter__matrix-item:nth-child(7) {
        grid-column: 1 / 3;
    }
    .specter__matrix-item:nth-child(8) {
        grid-column: 3 / -1;
    }
    .specter__right > img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
    }
    @media (max-width: 1250px) {
        .specter {
            grid-template-columns: 100%;
        }
    }
    @media (max-width: 1024px) {
        .specter__matrix {
            grid-template-columns: 100%;
            row-gap: 10px;
        }
        .specter__matrix > .specter__matrix-item {
            grid-column: 1 / -1;
        }
    }
</style>
