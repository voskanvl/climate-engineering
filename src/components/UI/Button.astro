---
import Sprite from "./Sprite.astro"
interface Props {
    type: "blue" | "transparent"
    text: string
    href?: string
}

const { type, text, href } = Astro.props
---

<div class="button" data-type={type}>
    <span class="button__text">{text}</span>
    {
        {
            blue: <Sprite name="white-ref" class="button__ref" />,
            transparent: <Sprite name="blue-ref" class="button__ref" />,
        }[type]
    }
</div>

<style is:global>
    .button {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-radius: 100px;
        border: 1px solid var(--clr-blue);
        padding: 5px;
        padding-left: 20px;
        width: max(200px, 100%);
        color: var(--clr-blue);
        cursor: pointer;
        font-weight: 500;
        font-size: 1rem;
    }
    .button[data-type="blue"] {
        background: var(--clr-blue);
        color: #fff;
    }
    .button[data-type="transparent"] .button__text {
        color: var(--clr-blue);
    }
    .button .button__ref {
        aspect-ratio: 1;
        color: inherit;
        flex: 0 0 45px;
    }
</style>
