---
interface Props {
    background: string
    id?: string
    isFirst?: boolean
}
const { background, id, isFirst = false } = Astro.props
---

<div
    class:list={["block", { "first-block": isFirst }]}
    style={{ background, backgroundSize: "cover", backgroundPosition: "center" }}
    id={id || ""}
>
    <div>
        <slot />
    </div>
</div>

<style is:global define:vars={{ isFirst }}>
    .block {
        border-radius: var(--block-radius);
        display: grid;
        grid-template-columns: 100%;
        place-items: center;
        margin: 20px 0px;
        padding: calc(120 / 1920 * 100vw) calc(100 / 1920 * 100vw);
    }
    .block > div {
        width: 100%;
    }
    .block.first-block > div {
        margin-top: max(125px, 212 / 1920 * 100vw);
    }
</style>
