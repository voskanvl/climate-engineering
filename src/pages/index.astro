---
import Layout from "../layouts/main.astro"
import Catalog from "@data/catalog.yml"
import Deals from "@data/deals.yml"
import PopularData from "@data/popular.yml"
import Jobs from "@data/jobs.yml"

import test from "../assets/images/catalog/1.png"
import List from "@ui/List.astro"
import ProductCard from "@ui/ProductCard.astro"
import Deal from "@ui/Deal.astro"
import Popular from "@ui/Popular.astro"

const catalog = Catalog as Links[]
const deals = Deals as Deal[]
const popular = PopularData as PopularType[]
const jobs = Jobs as JobsType[]
---

<Layout title="КлиматТехника">
    <List title="Каталог товаров" arr={catalog}>
        {(e: Links) => <ProductCard element={e} />}
    </List>
    <List title="Выгодные предложения" arr={deals}>
        {(e: Deal) => <Deal deal={e} />}
    </List>
    <List title="Популярные услуги" arr={popular}>
        {(e: PopularType) => <Popular element={e} />}
    </List>
    <List title="Как выглядит процесс работы" arr={jobs}>
        {(e: JobsType) => <pre>{JSON.stringify(e, null, 2)}<img src={e.icon} alt=""/></pre>}
    </List>
</Layout>
