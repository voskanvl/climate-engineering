---
// import "@splidejs/splide/css"
import BasicFooter from "@blocks/BasicFooter.astro"
import BasicHeader from "@blocks/BasicHeader.astro"
const { title } = Astro.props
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <BasicHeader />
        <main>
            <slot />
        </main>
        <BasicFooter />
    </body>
</html>

<style is:global>
    @import url(https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300italic,regular,italic,700,700italic);
    @import url(https://fonts.googleapis.com/css?family=Inter:100,200,300,regular,500,600,700,800,900);
    :is(*, *::after, *::before) {
        box-sizing: border-box;
    }
    :root {
        --transtion-time: 0.6s;
        --clr-footer: #38529f;
        --clr-blue: var(--clr-footer);
        --clr-black: #0d2137;
    }
    body {
        font-family: Inter, sans-serif;
        margin: 0;
        padding: min(30px, 30 / 1920 * 100vw);
        padding-bottom: 0;
        color: #000;
    }

    h1,
    h2,
    h3,
    h4,
    h5 {
        font-family: "Roboto Condensed", sans-serif;
    }
    a {
        color: inherit;
        text-decoration: none;
    }

    img {
        display: block;
        max-width: 100%;
    }
    .container {
        width: min(1660px, 100% - 2rem);
        margin-inline: auto;
    }
</style>
