---
// import "@splidejs/splide/css"
import BasicFooter from "@blocks/BasicFooter.astro"
import BasicHeader from "@blocks/BasicHeader.astro"
const { title } = Astro.props
---

<!doctype html>
<html lang="ru">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
    </head>
    <body>
        <main>
            <slot />
        </main>
        <BasicFooter />
    </body>
</html>

<style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap");
    @import url(https://fonts.googleapis.com/css?family=Inter:100,200,300,regular,500,600,700,800,900);
    :is(*, *::after, *::before) {
        box-sizing: border-box;
    }
    :root {
        --transtion-time: 0.6s;
        --clr-footer: #38529f;
        --clr-blue: var(--clr-footer);
        --clr-lightblue: #80accd;
        --clr-black: #0d2137;
        --clr-gray: #d9d9d9;
        --clr-salat: #ecf4fc;
        --block-radius: 30px;
    }
    body {
        font-family: Inter, sans-serif;
        margin: 0;
        padding: 0 min(30px, 30 / 1920 * 100vw);
        color: #000;
        width: 100%;
        margin-inline: auto;
    }

    h1,
    h2,
    h3,
    h4,
    h5 {
        font-family: "Roboto Condensed", sans-serif;
        margin-block: 0;
    }
    a {
        color: inherit;
        text-decoration: none;
    }

    img {
        display: block;
    }
    :is(input, textarea) {
        border-radius: 100px;
        background: #fff;
        padding: 16px 30px;
        display: block;
        border: none;
        font-size: 18px;
    }
    :is(textarea) {
        border-radius: 20px;
    }
    :is(input, textarea)::placeholder {
        color: #bebebe;
    }
    .container {
        width: min(1660px, 100% - 2rem);
        margin-inline: auto;
    }
    .watch-all {
        display: grid;
        place-items: center;
        border-radius: 100px;
        border: 1px solid var(--clr-blue);
        color: var(--clr-blue);
        font-weight: 500;
        width: 183px;
        height: 54px;
        margin-top: calc(70 / 1920 * -100vw);
        margin-inline: auto;
    }
    .burger {
        height: 35px;
        aspect-ratio: 1;
        display: none;
        translate: 0;
        z-index: 2;
        flex: 0 0 35px;
    }
    .title {
        font-family: "Roboto Condensed", sans-serif;
        color: var(--clr-black);
        font-size: clamp(30px, 45 / 1920 * 100vw, 45px);
        font-weight: 500;
        line-height: 105%; /* 47.25px */
        margin: 0;
        padding: 0;
        margin-top: 0;
        margin-bottom: calc(50 / 1920 * 100vw);
        text-align: center;
    }
</style>
